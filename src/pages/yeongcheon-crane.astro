---
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import YeongcheonCranePage from '@/components/views/YeongcheonCranePage';
import { Head } from '@/components/Head';
---

<!DOCTYPE html>
<html lang="ko">
  <head>
    <Head />
    <title>영천크레인 | 영천카고크레인 전문 대한카고크레인</title>
    <meta name="description" content="영천크레인, 영천카고크레인 전문 대한카고크레인. 영천 전지역 크레인 임대, 카고크레인 작업, 임고·금호·청통·신녕 즉시 배차 가능." />
    <meta name="keywords" content="영천크레인, 영천카고크레인, 경산크레인, 대구크레인, 경주크레인, 군위크레인, 청도크레인" />
  </head>
  <body>
    <div class="min-h-screen bg-background">
      <Header currentPath="/yeongcheon-crane" />
      <main class="pt-20">
        <YeongcheonCranePage client:load />
      </main>
      <Footer />
    </div>
  </body>
</html>

<style is:global>
  @import '@/styles/global.css';
  @import '@/styles/fonts.css';
</style>
