---
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import CheongdoPage from '@/components/views/CheongdoPage';
import { RegionalHead } from '@/components/RegionalHead';
---

<!DOCTYPE html>
<html lang="ko">
  <head>
    <RegionalHead 
      regionName="청도"
      regionTitle="청도 크레인"
      keywords="청도 크레인, 청도 카고크레인, 청도 중량물 운송, 청도 건설 자재 운반"
      streetAddress="청도군 화양읍 중앙로 456"
      addressRegion="청도군"
      phone="010-2332-4822"
      url="https://www.daehancargocrane.com/cheongdo"
      canonical="https://www.daehancargocrane.com/cheongdo"
      ogImage="https://static.wixstatic.com/media/6820d4_b8bb9e74216a45bda96bf7cfb92afadd~mv2.png"
      areaServed={["화양읍", "청도읍", "각남면", "매전면", "이서면", "운문면"]}
    />
  </head>
  <body>
    <div class="min-h-screen bg-background">
      <Header currentPath="/cheongdo" />
      <main class="pt-20">
        <CheongdoPage client:load regionName="청도" regionDescription="청도 크레인은 농업 시설 및 산업 장비 운송, 건설 자재 운반, 중량물 이전 등 지역의 특성에 맞춘 전문적인 솔루션을 제공합니다." />
      </main>
      <Footer />
    </div>
  </body>
</html>

<style is:global>
  @import '@/styles/global.css';
  @import '@/styles/fonts.css';
</style>
