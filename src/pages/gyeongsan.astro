---
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import GyeongsanPage from '@/components/views/GyeongsanPage';
import { RegionalHead } from '@/components/RegionalHead';
---

<!DOCTYPE html>
<html lang="ko">
  <head>
    <RegionalHead 
      regionName="경산"
      regionTitle="경산 크레인"
      keywords="경산 크레인, 경산 카고크레인, 경산 중량물 운송, 경산 건설 자재 운반"
      streetAddress="경산시 중앙동 산업로 234"
      addressRegion="경산시"
      phone="010-2332-4822"
      url="https://www.daehancargocrane.com/gyeongsan"
      canonical="https://www.daehancargocrane.com/gyeongsan"
      ogImage="https://static.wixstatic.com/media/6820d4_b8bb9e74216a45bda96bf7cfb92afadd~mv2.png"
      areaServed={["중앙동", "남산동", "북산동", "신상동", "신천동", "압량면", "진량면", "하양읍"]}
    />
  </head>
  <body>
    <div class="min-h-screen bg-background">
      <Header currentPath="/gyeongsan" />
      <main class="pt-20">
        <GyeongsanPage client:load regionName="경산" regionDescription="경산 크레인은 지역의 다양한 산업 현장에서 중량물 운송, 건설 자재 운반, 산업 장비 이전 등 맞춤형 솔루션을 제공하고 있습니다." />
      </main>
      <Footer />
    </div>
  </body>
</html>

<style is:global>
  @import '@/styles/global.css';
  @import '@/styles/fonts.css';
</style>
