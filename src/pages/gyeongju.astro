---
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import GyeongjuPage from '@/components/views/GyeongjuPage';
import { RegionalHead } from '@/components/RegionalHead';
---

<!DOCTYPE html>
<html lang="ko">
  <head>
    <RegionalHead 
      regionName="경주"
      regionTitle="경주 크레인"
      keywords="경주 크레인, 경주 카고크레인, 경주 중량물 운송, 경주 건설 자재 운반"
      streetAddress="경주시 황성동 123"
      addressRegion="경주시"
      phone="010-2332-4822"
      url="https://www.daehancargocrane.com/gyeongju"
      canonical="https://www.daehancargocrane.com/gyeongju"
      ogImage="https://static.wixstatic.com/media/6820d4_b8bb9e74216a45bda96bf7cfb92afadd~mv2.png"
      areaServed={["황성동", "동궁동", "중앙동", "성건동", "안강읍", "건천읍", "현곡면", "외동읍"]}
    />
  </head>
  <body>
    <div class="min-h-screen bg-background">
      <Header currentPath="/gyeongju" />
      <main class="pt-20">
        <GyeongjuPage client:load regionName="경주" regionDescription="경주 크레인은 산업 현장에서 필요한 중량물 운송, 건설 자재 운반, 산업 장비 이전 등 전문적인 솔루션을 제공합니다." />
      </main>
      <Footer />
    </div>
  </body>
</html>

<style is:global>
  @import '@/styles/global.css';
  @import '@/styles/fonts.css';
</style>
