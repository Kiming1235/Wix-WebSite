---
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import GyeongjuPage from '@/components/views/GyeongjuPage';
import { RegionalHead } from '@/components/RegionalHead';
---

<!DOCTYPE html>
<html lang="ko">
  <head>
    <RegionalHead 
      regionName="경주"
      regionTitle="경주 크레인 | 삼다8476대한크레인"
      keywords="경주 크레인, 경주 카고크레인, 경주 중량물 운송, 경주 건설 자재 운반"
      address="경주시"
      phone="010-1234-5678"
      url="https://www.daehancargocrane.com/gyeongju"
    />
  </head>
  <body>
    <div class="min-h-screen bg-background">
      <Header currentPath="/gyeongju" />
      <main class="pt-20">
        <GyeongjuPage client:load regionName="경주" regionDescription="경주 크레인은 산업 현장에서 필요한 중량물 운송, 건설 자재 운반, 산업 장비 이전 등 전문적인 솔루션을 제공합니다." />
      </main>
      <Footer />
    </div>
  </body>
</html>

<style is:global>
  @import '@/styles/global.css';
  @import '@/styles/fonts.css';
</style>
