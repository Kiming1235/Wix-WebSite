---
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import CheongdoCranePage from '@/components/views/CheongdoCranePage';
import RegionalHead from '@/components/views/RegionalHead'; // props 받는 버전
---

<!DOCTYPE html>
<html lang="ko">
  <head>
    <RegionalHead
      regionName="청도군"
      regionTitle="청도크레인 | 청도카고크레인 전문 대한카고크레인"
      url="https://www.daehancargocrane.com/cheongdo-crane"
      keywords="청도크레인, 청도카고크레인, 경산크레인, 대구크레인, 경주크레인, 군위크레인, 영천크레인"
      address="신암남로 145"
      phone="010-2332-4822"
      ogImage="/images/cheongdo-crane.jpg"
      addressRegion="경상북도"
      areaServed={["청도군","경산시","대구광역시"]}
    />
  </head>
  <body>
    <div class="min-h-screen bg-background">
      <Header currentPath="/cheongdo-crane" />
      <main class="pt-20">
        <CheongdoCranePage client:load />
      </main>
      <Footer />
    </div>
  </body>
</html>
