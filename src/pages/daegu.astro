---
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import DaeguPage from '@/components/views/DaeguPage';
import { RegionalHead } from '@/components/RegionalHead';
---

<!DOCTYPE html>
<html lang="ko">
  <head>
    <RegionalHead 
      regionName="대구"
      regionTitle="대구 크레인 | 삼다8476대한크레인"
      keywords="대구 크레인, 대구 카고크레인, 대구 중량물 운송, 대구 건설 자재 운반"
      streetAddress="대구광역시 동구 신암남로 145"
      addressRegion="대구광역시"
      phone="010-2332-4822"
      url="https://www.daehancargocrane.com/daegu"
      canonical="https://www.daehancargocrane.com/daegu"
      ogImage="https://static.wixstatic.com/media/6820d4_b8bb9e74216a45bda96bf7cfb92afadd~mv2.png"
      areaServed={["대구광역시", "경북"]}
    />
  </head>
  <body>
    <div class="min-h-screen bg-background">
      <Header currentPath="/daegu" />
      <main class="pt-20">
        <DaeguPage client:load regionName="대구" regionDescription="대구 크레인은 산업 현장에서 필요한 중량물 운송, 건설 자재 운반, 산업 장비 이전 등 전문적인 솔루션을 제공합니다." />
      </main>
      <Footer />
    </div>
  </body>
</html>

<style is:global>
  @import '@/styles/global.css';
  @import '@/styles/fonts.css';
</style>
