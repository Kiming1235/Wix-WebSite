---
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import YeongcheonPage from '@/components/views/YeongcheonPage';
import { RegionalHead } from '@/components/RegionalHead';
---

<!DOCTYPE html>
<html lang="ko">
  <head>
    <RegionalHead 
      regionName="영천"
      regionTitle="영천 크레인 | 삼다8476대한크레인"
      keywords="영천 크레인, 영천 카고크레인, 영천 중량물 운송, 영천 건설 자재 운반"
      streetAddress="영천시 중앙동 영천로 567"
      addressRegion="영천시"
      phone="010-2332-4822"
      url="https://www.daehancargocrane.com/yeongcheon"
      canonical="https://www.daehancargocrane.com/yeongcheon"
      ogImage="https://static.wixstatic.com/media/6820d4_b8bb9e74216a45bda96bf7cfb92afadd~mv2.png"
      areaServed={["영천시", "경주시", "포항시"]}
    />
  </head>
  <body>
    <div class="min-h-screen bg-background">
      <Header currentPath="/yeongcheon" />
      <main class="pt-20">
        <YeongcheonPage client:load regionName="영천" regionDescription="영천 크레인은 지역의 다양한 산업 현장에서 중량물 운송, 건설 자재 운반, 산업 장비 이전 등 맞춤형 솔루션을 제공하고 있습니다." />
      </main>
      <Footer />
    </div>
  </body>
</html>

<style is:global>
  @import '@/styles/global.css';
  @import '@/styles/fonts.css';
</style>
