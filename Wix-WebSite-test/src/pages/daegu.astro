---
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import DaeguPage from '@/components/views/DaeguPage';
import { RegionalHead } from '@/components/RegionalHead';
---

<!DOCTYPE html>
<html lang="ko">
  <head>
    <RegionalHead 
      regionName="대구"
      regionTitle="대구 크레인"
      keywords="대구 크레인, 대구 카고크레인, 대구 중량물 운송, 대구 건설 자재 운반"
      streetAddress="대구광역시 동구 신암남로 145"
      addressRegion="대구광역시"
      phone="010-2332-4822"
      url="https://www.daehancargocrane.com/daegu"
      canonical="https://www.daehancargocrane.com/daegu"
      ogImage="https://static.wixstatic.com/media/6820d4_b8bb9e74216a45bda96bf7cfb92afadd~mv2.png"
      areaServed={["중구", "동구", "서구", "남구", "북구", "수성구", "달서구", "달성군"]}
    />
  </head>
  <body>
    <div class="min-h-screen bg-background">
      <Header currentPath="/daegu" />
      <main class="pt-20">
        <DaeguPage client:load regionName="회사소개" regionDescription="각 현장의 특성과 요구사항을 정확히 파악하여 최적화된 맞춤형 솔루션을 제공하며, 경산 크레인, 경주 크레인, 대구 크레인, 구미 크레인, 성주 크레인 등 지역별 전문 장비를 활용한 안전하고 효율적인 운송 서비스를 통해 고객의 성공적인 프로젝트 완수를 지원합니다." />
      </main>
      <Footer />
    </div>
  </body>
</html>

<style is:global>
  @import '@/styles/global.css';
  @import '@/styles/fonts.css';
</style>
